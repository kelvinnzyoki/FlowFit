{
  "name": "flowfit-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "Production-ready Node.js backend for FlowFit SaaS platform",
  "main": "dist/src/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "npx prisma generate --schema=./prisma/schema.prisma && npx tsc",
    "vercel-build": "npx prisma generate --schema=./prisma/schema.prisma && npx prisma migrate deploy && npx tsc",
    "postinstall": "npx prisma generate --schema=./prisma/schema.prisma",
    "start": "node dist/src/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts",
    "test": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": ["fitness", "saas", "workout", "tracking", "nodejs", "express", "postgresql", "redis"],
  "author": "FlowFit Team",
  "license": "MIT",
  "dependencies": {
    "typescript": "^5.4.0",
    "prisma": "^5.9.1",
    "@prisma/client": "^5.9.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "rate-limit-redis": "^4.2.0",
    "helmet": "^8.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.12.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "@types/node": "^20.11.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=9.0.0"
  }
}
